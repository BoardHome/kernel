#include "rv1109-firefly-ai-cam.dtsi"

&gsl3680 {
	status = "disabled";
};

&dsi {

	status = "okay";
	
        panel@0 {
                compatible = "simple-panel-dsi";

                reg = <0>;
                backlight = <&backlight>;
                ///delete-property/ power-supply;
		//enable-gpios = <&gpio0 RK_PD6 GPIO_ACTIVE_HIGH>;
		power-supply = <&lcd_n>;
		reset-gpios = <&gpio2 RK_PD7 GPIO_ACTIVE_LOW>;
		
		//pinctrl-0 = <&lcd_ctl>,<&lcd_rst_ctl>;
		//pinctrl-0 = <&lcd_rst>;
                pinctrl-names = "default";

		dsi,flags = <(MIPI_DSI_MODE_VIDEO_BURST | MIPI_DSI_MODE_VIDEO |
				MIPI_DSI_MODE_LPM)>;
		dsi,format = <MIPI_DSI_FMT_RGB888>;
		bus-format = <MEDIA_BUS_FMT_RGB666_1X18>;
		dsi,lanes = <4>;

		prepare-delay-ms = <120>;
        	reset-delay-ms = <120>;
        	init-delay-ms = <120>;
        	enable-delay-ms = <120>;
        	unprepare-delay-ms = <120>;
        	disable-delay-ms = <120>;

                size,width = <120>;
                size,height = <170>;

		width-mm = <135>;
                height-mm = <216>;

                status = "okay";
		
		panel-init-sequence = [
            		//39 00 04 B9 83 10 2E
            		// 15 00 02 CF FF
            		05 78 01 11
            		05 32 01 29
            		//15 00 02 35 00
        	];

        	panel-exit-sequence = [
            		05 00 01 28
            		05 00 01 10
        	];

                display-timings {
                        native-mode = <&timing0>;
                        timing0: timing0 {
				clock-frequency = <72600000>;//<80000000>;
                		hactive = <800>;//<768>;
                		vactive = <1280>;
                		hsync-len = <14>;   //20, 50,10
                		hback-porch = <26>; //50, 56,10
                		hfront-porch = <32>;//50, 30,180
                		vsync-len = <8>;//4
                		vback-porch = <20>;//4
                		vfront-porch = <80>;//8
                		hsync-active = <0>;
                		vsync-active = <0>;
                		de-active = <0>;
                		pixelclk-active = <0>;
                        };
                };

                ports {
                        #address-cells = <1>;
                        #size-cells = <0>;

                        port@0 {
                                reg = <0>;
                                panel_in_dsi: endpoint {
                                        remote-endpoint = <&dsi_out_panel>;
                                };
                        };
                };
	};

        ports {
                #address-cells = <1>;
                #size-cells = <0>;

                port@1 {
                        reg = <1>;
                        dsi_out_panel: endpoint {
                                remote-endpoint = <&panel_in_dsi>;
                        };
                };
        };

};

&i2c3 {
     status = "okay";
     pinctrl-0 = <&i2c3m1_xfer>;
     clock-frequency = <100000>;

     i2c-scl-rising-time-ns = <7>;
     i2c-scl-falling-time-ns = <7>;

     hxchipset: hxchipset@48{ 
        status = "okay";
        compatible = "himax,hxcommon";
        reg = <0x48>;                   
	interrupt-parent = <&gpio2>;
	interrupts = <RK_PD6 IRQ_TYPE_LEVEL_LOW>;

        himax,rst-gpio =  <&gpio0 RK_PC2 GPIO_ACTIVE_HIGH>;
        himax,irq-gpio = <&gpio2 RK_PD6 IRQ_TYPE_LEVEL_LOW>;
	//pinctrl-0 = <&tp_ctl>,<&tp_irq>;
	pinctrl-0 = <&tp_ctl>;
        pinctrl-names = "default";


        himax,panel-coords = <0 800 0 1280>;      //触摸范围
        himax,display-coords = <0 800 0 1280>;    //分辨率
        report_type = <1>;
    };
};
